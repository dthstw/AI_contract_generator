# AI Agent LayerX Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_TEMPERATURE=0.2

# Langfuse Configuration
# These will be auto-generated when you first run the stack
# You can get these from http://localhost:3000 after startup
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
LANGFUSE_HOST=http://localhost:3000

# Optional: Langfuse Advanced Configuration
TELEMETRY_ENABLED=true
LANGFUSE_ENABLE_EXPERIMENTAL_FEATURES=true

# Database Configuration (Auto-configured, change only if needed)
POSTGRES_VERSION=latest

# Security Configuration (CHANGE THESE IN PRODUCTION!)
# Generate new values with: openssl rand -hex 32
NEXTAUTH_SECRET=9851337d72259c19df0a0d5a23e8f8c17be834f294838e0eb9c3d5c7fa344776
REDIS_AUTH=myredissecret
CLICKHOUSE_PASSWORD=clickhouse
MINIO_ROOT_PASSWORD=miniosecret

# Storage Configuration
LANGFUSE_S3_EVENT_UPLOAD_BUCKET=langfuse
LANGFUSE_S3_MEDIA_UPLOAD_BUCKET=langfuse
LANGFUSE_S3_BATCH_EXPORT_BUCKET=langfuse

# Application Configuration
PYTHONPATH=/app
PYTHONUNBUFFERED=1 